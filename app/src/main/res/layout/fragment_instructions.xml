<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instructions_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:alpha="153"
    android:background="@android:color/darker_gray"
    android:paddingBottom="4dp"
    tools:context=".UI.InstructionsFragment">

    <ImageView
        android:id="@+id/directionsIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/instructionIcon"/>

    <TextView
        android:id="@+id/directionsText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/directionsIcon"
        android:layout_centerHorizontal="true"
        android:layout_gravity="fill"
        android:layout_marginBottom="-5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/directionsIcon"
        android:textSize="14sp"
        android:textStyle="italic" />
</RelativeLayout>

